                    </div>
                </div>
                <div class="row">
                    <div class="col align-self-center">
                        <img src="/images/chile.png" alt="Country Icon" width="20" height="20">
                    </div>
                </div>
            </div>


            <!-- Blank space -->
            <div class="col-md-4 col-sm-0"><!-- col-sm-0 to hide on small screens -->
            </div>
            <!-- Social Media -->
            <div class="col-md-4 col-sm-12 align-self-center">
                <a href="#"><i class="bi bi-facebook" style="font-size: 15px;"></i></a>
                <a href="#"><i class="bi bi-instagram" style="font-size: 15px;"></i></a>
