                                            <hr class="line-between">
                                            <span class="team-name">@team.TeamName</span>
                                        </div>
                                    </div>
                                }
                            </div>

                            <!-- Most Matches Won -->
                            <span class="stats-title">Most Matches Won</span>
                            <div class="row">
                                @foreach (var team in ViewBag.TopTeamsByWins)
                                {
                                    <div class="col-sm">
