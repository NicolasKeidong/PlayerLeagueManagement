@model PlayerManagement.Models.League

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h2>@Model.Name</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeagueFoundation" class="control-label"></label>
                <input asp-for="LeagueFoundation" class="form-control" />
                <span asp-validation-for="LeagueFoundation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeagueBudget" class="control-label"></label>
                <input asp-for="LeagueBudget" class="form-control" />
                <span asp-validation-for="LeagueBudget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfTeams" class="control-label"></label>
                <input asp-for="NumberOfTeams" class="form-control" min="0" max="30"/>
                <span asp-validation-for="NumberOfTeams" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Lookups" asp-route-Tab="@Context.GetRouteValue("controller").ToString()-Tab">Back to Lookup List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
