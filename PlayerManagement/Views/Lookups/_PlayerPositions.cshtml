
<br />
<div class="card mb-sm-3" style="min-width: 18rem;">
    <h4 class="card-header" id="PlayerPositions">Player Positions</h4>
    <div class="card-body">
        @Html.DropDownList("PlayerPositionsId", null, htmlAttributes: new { @size = 6, @class = "form-control" })

        @*//Upload Excel*@
        <br />
        <form asp-action="InsertFromExcel" asp-controller="PlayerPositions" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label custom-file-label">Upload Excel File:</label>
                        <div class="input-group mb-3">
                            <input type="file" class="form-control" name="theExcel" id="theExcel">
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Upload Data" class="btn btn-primary" />
                    </div>
                    <div>
                        @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger">
                                    <h4>Error:</h4>
                                    <ul>
                                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    </ul>
                                </div>
                            }

                            @if (TempData["Message"] != null)
                            {
                                <div class="alert alert-success">
                                    <h4>Success:</h4>
                                    <p>@TempData["Message"]</p>
                                </div>
                            }
                    </div>
                </div>
            </div>
        </form>

    </div>
    <div class="card-footer">
        <a asp-controller="PlayerPositions" asp-action="Create">Create</a> |
        <a asp-controller="PlayerPositions" asp-action="Edit" class="linkClick">Edit</a> |
        <a asp-controller="PlayerPositions" asp-action="Delete" class="linkClick">Delete</a>
    </div>
</div>