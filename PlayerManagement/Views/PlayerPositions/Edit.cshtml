@model PlayerManagement.Models.PlayerPosition

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h2>Position: @Model.PlayerPos</h2>
<hr />
<form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
<div class="row">
    <div class="col-md-4">
            <div class="form-group">
                <label asp-for="PlayerPos" class="control-label"></label>
                <input asp-for="PlayerPos" class="form-control" />
                <span asp-validation-for="PlayerPos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
    </div>
</div>
</form>
<div>
    <a asp-action="Index" asp-controller="Lookups" asp-route-Tab="@Context.GetRouteValue("controller").ToString()-Tab">Back to Lookup List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
