@model PlayerManagement.Models.PlayerPosition
<form asp-action="Create" asp-controller="PlayerPositions" method="post" id="createPositionForm">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlayerPos" class="control-label"></label>
                <input asp-for="PlayerPos" class="form-control" />
                <span asp-validation-for="PlayerPos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="submitPositionCreate" value="Save" class="btn btn-outline-dark" />
            </div>
        </div>
    </div>
</form>
