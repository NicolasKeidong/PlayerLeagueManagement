@model IEnumerable<PlayerManagement.ViewModels.TeamStatsVM>

@{
    ViewData["Title"] = "Team Stats";
}

<h1>Team Stats</h1>
<form asp-controller="Teams" asp-action="TeamStats" method="get">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Goals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RedCards)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YellowCards)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Goals)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RedCards)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YellowCards)
            </td>
        </tr>
}
    </tbody>
</table>
<partial name="_PagingNavBar" />
</form>